<h1>Create New User</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
  <%= f.label :login %><br />
  <%= f.text_field :login %>
  </p>

  <p>
  <%= f.label :email %><br />
  <%= f.text_field :email %>
  </p>
  <!-- TODO: switch role to dropdown prepopped with roles, value = role_id -->
  <p>
  <%= f.label :role_id %><br />
  <%= f.text_field :role_id %>
  </p>

  <p>
  <label for="user_password">Password:</label><br />
  <%= f.password_field :password, :size => 20 %>
  </p>

  <p>
  <label for="user_password_confirmation">Confirm Password:</label><br />
  <%= f.password_field :password_confirmation, :size => 20 %>
  </p>
  
  <p>
  <input type=submit value="Create" />
  </p>
<% end %>

<%= link_to 'Back', users_path %>
