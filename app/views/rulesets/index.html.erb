<h1>Listing rulesets</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @rulesets.each do |ruleset| %>
  <tr>
    <td><%=h ruleset.name %></td>
    <td><%=h ruleset.description %></td>
    <td><%= link_to 'Show', ruleset %></td>
    <td><%= link_to 'Edit', edit_ruleset_path(ruleset) %></td>
    <td><%= link_to 'Destroy', ruleset, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New ruleset', new_ruleset_path %>